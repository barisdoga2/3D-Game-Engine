package dev.engine.loaders;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class ImageLoader {
	
	public static BufferedImage loadBufferedImage(String file){
		BufferedImage bufferedImage = null;
		
		try {
			bufferedImage = ImageIO.read(new File(EngineSettings.RES_FOLDER + file + ".png"));
		} catch (IOException e) {
			Debugger.printError("BufferedImage Couldnt Loaded \"" + file + "\"");
		}
		
		return bufferedImage;
	}
	
}
